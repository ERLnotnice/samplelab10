<!doctype html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="User registration form.">
    <title>Northwind | {{ title }}</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>

    <h1>{{ title }}</h1>

    <form action="/register{{#user}}/{{ id }}{{/user}}" method="POST">
        <table>
            <thead>
                <tr>
                    <th>Property</th>
                    <th>Value</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td>Username</td>
                    <td>
                        <input type="text" name="username" value="{{ user.username }}" required />
                    </td>
                </tr>
                <tr>
                    <td>Email</td>
                    <td>
                        <input type="email" name="email" value="{{ user.email }}" required />
                    </td>
                </tr>
                <tr>
                    <td>Password</td>
                    <td>
                        <input type="password" name="password" value="" {{^user}}required{{/user}} />
                    </td>
                </tr>
                <tr>
                    <td>First Name</td>
                    <td>
                        <input type="text" name="first_name" value="{{ user.first_name }}" />
                    </td>
                </tr>
                <tr>
                    <td>Last Name</td>
                    <td>
                        <input type="text" name="last_name" value="{{ user.last_name }}" />
                    </td>
                </tr>
            </tbody>
        </table>

        <button class="btn btn-primary" type="submit">
            {{#user}}Save Changes{{/user}}{{^user}}Register{{/user}}
        </button>
    </form>

    <a href="/registrations" class="btn btn-secondary">Back to registration list</a>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>

</body>
</html>
