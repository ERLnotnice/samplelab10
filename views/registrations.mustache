<!doctype html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="List of registered users.">
    <title>Northwind | {{ title }}</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>

    <h1>{{ title }}</h1>
    <table>
        <thead>
            <tr>
                <th>#</th>
                <th>Username</th>
                <th>Email</th>
                <th>Full Name</th>
                <th></th>
            </tr>
        </thead>
        <tbody>

            {{# items }}
            <tr>
                <td>{{ id }}</td>
                <td>{{ username }}</td>
                <td>{{ email }}</td>
                <td>{{ first_name }} {{ last_name }}</td>
                <td>
                    <a href="/register/{{ id }}" class="btn btn-primary">View User</a>
                </td>
            </tr>
            {{/ items }}
        </tbody>
    </table>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>

</body>
</html>
